{
  "plugins": [
    "mocha"
  ],
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false
  },
  "rules": {
    "semi": [2, "never"],
    "no-underscore-dangle": 0,
    "class-methods-use-this": ["off"],
    "no-use-before-define": ["error", { 
      "functions": false, 
      "classes": false 
    }],
    "arrow-parens": ["error", "as-needed", {
      "requireForBlockBody": false
    }]
  }
}